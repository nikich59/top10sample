<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@drawable/search_result_item_background"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/queryResultItemView_titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:lines="1"
            android:ellipsize="end"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/queryResultItemView_linkView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="#3F51B5"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"

            app:layout_constraintTop_toBottomOf="@id/queryResultItemView_titleView"
            app:layout_constraintStart_toStartOf="@id/queryResultItemView_titleView"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/queryResultItemView_snippetView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#444"

            app:layout_constraintTop_toBottomOf="@id/queryResultItemView_linkView"
            app:layout_constraintStart_toStartOf="@id/queryResultItemView_titleView"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>









